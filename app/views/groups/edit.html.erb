<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Group</h2>
      <%= render 'layouts/errors', obj: @group %>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %><br>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %><br>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Group', class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>