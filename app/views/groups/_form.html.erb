<%= form_with model: group do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文 %><br>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :グループ画像 %><br>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Group', class: 'btn btn-info' %>
  </div>
<% end %>