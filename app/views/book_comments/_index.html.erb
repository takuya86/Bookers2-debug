<% book.book_comments.each do |book_comment| %>
  <p>
    <%= image_tag book_comment.user.get_profile_image, size:"60x60"%>
    <%= book_comment.comment %>

    <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %><br>
      <%=link_to book_comment.user.name, user_path(book_comment.user.id) %>
    <% end %>
  </p>
<% end %>