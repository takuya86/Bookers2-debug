<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to @book.tag, search_book_path(keyword: @book.tag) %>
          </td>
          <td id="favorite_btn_<%= @book.id %>" class="favorite-btn"><%= render 'favorites/favorite', book: @book %></td>
          <td class="book-comments-counter">
            <%= render "book_comments/counter", book: @book %>
          </td>
          <!--<td>閲覧数: <%= @book.view_counts.count %></td>-->
          <td><%= render 'star_rate', book: @book %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    　<div class="book-comments-index">
        <%= render "book_comments/index", book: @book %>
      </div>
      <div>
        <%= render "book_comments/form", book: @book, book_comment: @comment %>
      </div>
    </div>
  </div>
</div>